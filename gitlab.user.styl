            /// Image preview modes.
            .view-modes {
                c: 0 0 t;
                li { c: cm bd }
                .active { c: fg }
            }
            /// Notes -> Code discussion borders.
            .notes_holder td { border-top-color: bd i }
            .notes_holder td, .diff-discussions {
                border-bottom-color: bd i;
            }
        }
        /// Diff -> Change summary.
        &s-changed {
            c: 0 bd bb;
            > div > .dropdown {
                margin-left: 0;
                padding-left: 0;
                c: 0 0 t;
            }
            /.cred:not(#z) { c: red; v: red }
            /.cgreen:not(#z) { c: green; v: green }
