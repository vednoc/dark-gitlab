                c: fg bd hl;
                /// Header buttons.
                .btn {
                    svg { v: cm }
                    &.active { c: 0 0 bd }
                    &, &-default { c: 0 0 bg }
                    &-danger-secondary { c: red red }
                    &-default-tertiary:not(#z) { c: 0 t t }
