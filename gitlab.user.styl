            &[stroke = '#49cc29'] { v: 0 green }
            &[stroke = '#7a29cc'] { v: 0 orange }
            &[stroke = '#ccc052'] { v: 0 yellow }
            &[stroke = '#cc007a'] { v: 0 violet }
            &[stroke = '#b8a3cc'] { v: 0 magenta }
