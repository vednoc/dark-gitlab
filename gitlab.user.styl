        .row-content-block {
            c: 0 0 t;
            + div { padding: 0 }
        }
        .project-network {
            margin-top: 16px;
            c: 0 bd;
            rad: 4px;
            .controls {
                rad: 3px 3px 0 0;
                c: fg bd hl;
                input { c: 0 0 bg }
            }
            .network-graph {
                c: 0 0 bg;
            }
        }
        text { v: fg }
        rect {
            /// Sidebars.
            &[fill = '#222222'] { v: hl t }
            &[fill = '#444444'] { v: bb t }
            /// Commit info.
            &[transform = 'matrix(1\,0\,0\,1\,20\,20)'] { v: hl bd }
        }
        rect, path {
            /// Anchors.
            &[style = 'fill-opacity: 0.5;'] {
