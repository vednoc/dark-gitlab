            }
            &-title, &-title-flex-parent {
                // border-top: none i;
                box-shadow: none i;
                .btn:not(.active) { c: 0 0 bg }
                /// Diff -> Hide comment toggle/avatars.
                &::before { c: 0 0 bb }
            }
        }
        /// Content.
        .diff-content {
            c: fg 0 bg;
            /// Collapsed diff / Empty files.
            /.nothing-here-block {
                c: cm;
                .click-to-expand { c: ac t t }
