    // Pajamas.
    .gl {
        /// Search area.
        &-filtered-search {
            /// Wrapper.
            &-scrollable {
                c: 0 0 bg;
                rad: 4px 0 0 4px;
                box-shadow: inner i;
                input { c: fg 0 t }
